<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
      Using a Material3 DayNight theme with NoActionBar ensures compatibility with
      AppCompatActivity and allows the app's Compose theme to control the UI,
      which is the modern recommended approach.
    -->
    <style name="Theme.ExpenseTracker" parent="Theme.Material3.DayNight.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/ic_launcher_foreground_background</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.ExpenseTracker</item>
    </style>
</resources>
